#opponent-board.col-sm-5(ng-controller='gridController')
  h4 Opponent Board
  table.board-table
    tr.board-row(ng-repeat='row in gridSize(10) track by $index')
      td.board-cell(ng-repeat='col in gridSize(10) track by $index' data-x="{{$parent.$index + 1}}", data-y='{{$index + 1}}' ng-click='pushCoordinates($parent.$index + 1, $index + 1)') 
        .content {{boardMapping[$parent.$index + 1]}}{{$index + 1}}
.ships.col-sm-5
  table#draggable.carrier-table
    tr.boat.carrier
      td.carrier-cell(colspan='5')
        img(src='../img/ships/carrier.png')
  table#draggable.battleship-table
    tr.boat.battleship
      td.battleship-cell(colspan='4')
        img(src='../img/ships/battleship.png')
  table#draggable.destroyer-table
    tr.boat.destroyer
      td.destroyer-cell(colspan='4')
        img(src='../img/ships/destroyer.png')
  table#draggable.submarine-table
    tr.boat.submarine
      td.submarine-cell(colspan='4')
        img(src='../img/ships/submarine.png')
  table#draggable.patrol-table
    tr.boat.patrol
      td.patrol-cell(colspan='4')
        img(src='../img/ships/patrol.png')
